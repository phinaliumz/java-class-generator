{
    "name": "java-class-generator",
    "license": "BSD-3-Clause",
    "displayName": "java-class-generator",
    "description": "Generate skeleton Java classes",
    "version": "0.0.1",
    "publisher": "samikallio",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.generateSkeletonJavaClass",
        "onCommand:extension.generateSkeletonJavaInterface",
        "onCommand:extension.generateSkeletonJavaEnum",
        "onCommand:extension.implementJavaInterface"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.generateSkeletonJavaClass",
                "title": "Java: Generate skeleton class"
            },
            {
                "command": "extension.generateSkeletonJavaInterface",
                "title": "Java: Generate skeleton interface"
            },
            {
                "command": "extension.generateSkeletonJavaEnum",
                "title": "Java: Generate skeleton enum"
            },
            {
                "command": "extension.implementJavaInterface",
                "title": "Java: Implement a interface"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.26",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    }
}
